<% player = Player.find_by(cbsid: @user.cbs_id) %>
<% if player %>
  <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
  <% playerlist = get_division_list("The Flusher Division") %>
  <% playerseries, avgseries, mnfseries, playerdata = get_player_stats(player.id) %>
  <h2><%= player.playername %> - <%= player.division %></h2>
  <table class="nopadding">
    <tr>
      <td class="playerstats lefthead blankrow nopadding">
        Total Wins:
      </td>
      <td class="playerstats2 nopadding blankrow">
        <%= playerdata[0][:wins] %>
      </td>
    </tr>
    <tr>
      <td class="playerstats lefthead blankrow nopadding">
        Total Games:
      </td>
      <td class="playerstats2 nopadding blankrow">
        <%= playerdata[0][:games] %>
      </td> 
    </tr>    
    <tr>
      <td class="playerstats lefthead blankrow nopadding">
        Winning %:
      </td>
      <td class="playerstats2 nopadding blankrow">
        <%= '%.2f' % playerdata[0][:winpercent] %>
      </td> 
    </tr>
    <tr>
      <td class="playerstats lefthead blankrow nopadding">
        Trophies:
      </td>
      <td class="playerstats2 nopadding blankrow">
        <%= playerdata[0][:trophies] %>
      </td> 
    </tr>
    <tr>
      <td class="playerstats lefthead blankrow nopadding">
        Sphinters:
      </td>
      <td class="playerstats2 nopadding blankrow">
        <%= playerdata[0][:sphincters] %>
      </td> 
    </tr> 
  </table>
  
  <br>
  <br>
  <% oldwins = 20 %>
  
  <%= render 'nextwins', oldwin: oldwins %>
  
  <div id="nw">
  <%= "Wins needed: " + @newnum.to_s %>
  </div>
  

 <br>
 <br>
  
  <% seriesa = playerseries %>
  <% seriesb = avgseries %>

  

  <%= column_chart [ { name: player.playername, data: seriesa} , { name: "Average", data: seriesb}], colors: ["#2E86C1","#E74C3C","orange"], width: "1000px", library: { backgroundColor: "transparent", chartArea: {left: 10}, title: "Wins Per Week vs. Average"} %>
  
  <%= pie_chart (mnfseries), colors: ["#2E86C1","#9B59B6","#E74C3C"], width: "1000px", library: {is3D: true, backgroundColor: "transparent", chartArea: {left: 10}, title: "MNF Over Actual vs. Under Actual"} %>

 

<% end %>