
<table>
    <tr>
    <td class="blankrow lefthead nopadding tabletitle">
      <h2>NFC</h2>
    </td>
  </tr>
<%= render "division_header", divisionclass: "nfc", divisionname: "The Flusher Division" %>
  <% playerlist = get_division_list("The Flusher Division") %>
  <% greenbar = true %>
  <% playerlist.each do |p| %>
    <% stripeclass = (greenbar)? "greenbar" : "nogreenbar" %>
    <% if p[:playername] == @current_user.name %>
      <% stripeclass = "myteam" %>
    <% end %>
  <tr class="<%= stripeclass %>">
    <td class="playername">
      <%= p[:playername] %>
    </td>  
    <td class="rightalign">
      <%= '%.2f' % p[:winpercent] %>%
    </td>
    <td class="rightalign">
      <%= p[:wins] %>
    </td>
    <td class="rightalign">
      <%= p[:games] %>
    </td>
    <td class="tbaward">
      <% tbawards = "<img src=\"/images/trophy.png\" alt=\"Trophy\" width=\"15\" height=\"15\" />" * p[:trophies] %>
      <%= raw tbawards %>
    </td>
    <td  class="donkey">
      <% sphincters = "<img src=\"/images/Donkey.png\" alt=\"Trophy\" width=\"15\" height=\"15\" />" * p[:sphincters] %>
      <%= raw sphincters %>
    </td>
    <%= raw p[:playerhtml] %>
  </tr>
    <% greenbar = !greenbar %>
  <% end %>
  <tr>
    <td class="blankrow">
      &nbsp
    </td>
  </tr>
